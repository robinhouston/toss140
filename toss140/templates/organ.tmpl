{% extends "master.tmpl" %}

{% block title %}{{organ}} | toss140.net{% endblock %}

{% block content %}
	<h1>toss140.net</h1>
	{% if logout_url %}
		<div class="logout"><a href="{{logout_url}}">log out</a></div>
	{% endif %}
	<div id="articles">
	<h2>From {{organ}}</h2>
	{% for tweet in tweets %}
		<div class="articlebox">
			{%ifchanged tweet.article.date%}
				<div class="date">{{tweet.article.date|date:"D jS F Y"}}</div>
			{%endifchanged%}
			{%ifchanged tweet.article%}
			<!-- {{tweet.article.title}} -->
			{%endifchanged%}
			<div class="tweet">
				&quot;{{tweet.text|escape}}&quot;
				<div class="tweeter"><a
					 href="http://twitter.com/{{tweet.from_user}}/status/{{tweet.id}}">{{tweet.from_user}}</a>
				</div>
				<div class="author">
					â€“ {%if tweet.article.author%}
							<a href="/author/{{tweet.article.author|urlencode}}">{{tweet.article.author}}</a>,
						{%else%}
							author unknown,
						{%endif%}
					{{tweet.article.parent.name}}
					<a href="{{tweet.long_url}}"><img src="/Icon_External_Link.png" /></a>
				</div>
			</div>
		</div>
	{% endfor %}
	</div>
{% endblock %}