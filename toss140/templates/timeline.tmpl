{% extends "master.tmpl" %}

{% block title %}toss140.net – comment on the commentators{% endblock %}

{% block content %}
	<div id="articles">
		<div class="datenav" id="datenav-top">
			{% if older %}
				<div class="date-older">
					<a href="/till/{{ older }}{{q}}"
					>« Older articles</a>
				</div>
			{% endif %}
			{% if newer %}
				<div class="date-newer">
					<a href="/since/{{ newer }}{{q}}"
					>Newer articles »</a>
				</div>
			{% endif %}
		</div>

		{% for article in articles %}
			{% include "articlebox.inc" %}
		{% endfor %}

		<div class="datenav" id="datenav-bottom">
			{% if older %}
				<div class="date-older">
					<a href="/till/{{ older }}{{q}}"
					>« Older articles</a>
				</div>
			{% endif %}
			{% if newer %}
				<div class="date-newer">
					<a href="/since/{{ newer }}{{q}}"
					>Newer articles »</a>
				</div>
			{% endif %}
		</div>
	</div>
	{% include 'sidebar.inc' %}
{% endblock %}
